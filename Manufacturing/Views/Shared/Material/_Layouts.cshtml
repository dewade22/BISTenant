@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - @Html.Raw(HttpContextAccessor.HttpContext.Session.GetString("tenant"))</title>
    <partial name="Material/_Styles" />
    @RenderSection("Styles", required: false)
</head>

<body data-ma-header="teal">
    <partial name="Material/_TopNavigation" />

    <section id="main">
        <input type="hidden" id="tenantLayout" value="@Html.Raw(HttpContextAccessor.HttpContext.Session.GetString("tenant"))"/>
        <aside id="s-main-menu" class="sidebar">
            <div class="smm-header">
                <i class="zmdi zmdi-long-arrow-left" data-ma-action="sidebar-close"></i>
            </div>

            <ul class="smm-alerts">
                <li data-user-alert="sua-notifications" class="dropdown hm-profile">
                    <a data-toggle="dropdown" href="#">
                        <img src="~/sources/img/profile-pics/1.jpg" alt="">
                    </a>
                </li>
                <li class="nama">@Html.Raw(HttpContextAccessor.HttpContext.Session.GetString("UserCode"))</li>
                <!--<li class="nama">U@ser.Identity.Name</li>-->
            </ul>

            <partial name="Material/_MainNavigation" />
        </aside>

        <section id="content">
            <input type="hidden" id="userLogin" value="@Html.Raw(HttpContextAccessor.HttpContext.Session.GetString("UserCode"))" />
            @RenderBody()
        </section>


    </section>

    <!-- Page Loader -->
    <div class="page-loader palette-Teal bg">
        <div class="preloader pl-xl pls-white">
            <svg class="pl-circular" viewBox="25 25 50 50">
                <circle class="plc-path" cx="50" cy="50" r="20" />
            </svg>
        </div>
    </div>
    <partial name="Material/_Scripts" />
    @RenderSection("Scripts", required: false)
</body>

</html>