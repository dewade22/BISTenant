@using static Manufacturing.Helpers.NavigationIndicatorHelper
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="#" class="brand-link">
        <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">AllVision</span>
    </a>
    @if (@HttpContextAccessor.HttpContext.Session.GetString("UserCode") != "")
    {
        <div class="sidebar">
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                @*<div class="image">
                        <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>*@
                <div class="info">
                    <a href="#" class="icon-dashboard">DashBoard @HttpContextAccessor.HttpContext.Session.GetString("UserCode")</a>
                </div>
            </div>
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="true">
                    @Html.Raw(HttpContextAccessor.HttpContext.Session.GetString("menuString"))
                </ul>
            </nav>
        </div>
    }
</aside>

