@{
    ViewData["Title"] = "Today Sales";
    Layout = "~/Views/Shared/Material/_Layouts.cshtml";
}
@section Styles{

}

<section id="content">
    <div class="container">
        <div class="c-header">
            <h1>@ViewData["Title"] - @ViewBag.Category</h1>
        </div>
        <div class="card">
            <div class="card-header">
                <h2>List of Transaction</h2>
            </div>
            <div class="table-responsive">
                <table id="tableSales" class="table table-valign-middle table-bordered table-hover" style="table-layout:fixed; width:100%">
                    <thead>
                        <tr>
                            <th style="font-weight:bold; width:200px">SO Number</th>
                            <th style="font-weight:bold; width:200px">Document No</th>
                            <th style="font-weight:bold; width:200px">Sales Person</th>
                            <th style="font-weight:bold; width:250px">Customers</th>
                            <th style="font-weight:bold; width:150px">Qty</th>
                            <th style="font-weight:bold; width:150px">Liter</th>
                            <th style="font-weight:bold; width:250px">Cost</th>
                            <th style="font-weight:bold; width:250px">Amount</th>
                            <th style="font-weight:bold; width:250px">Discount</th>
                            <th style="font-weight:bold; width:200px">Tax</th>
                            <th style="font-weight:bold; width:300px">Amount Incd Tax</th>
                            <th style="font-weight:bold; width:150px">Landed Cost</th>
                            <th style="font-weight:bold; width:250px">Revenue</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/backend/SalesActual/BIPDetilForms.js"></script>
}
