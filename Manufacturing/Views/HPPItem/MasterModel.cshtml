@model IEnumerable<Manufacturing.Models.Hpp.ModelMasterViewModel>
@{
    ViewData["Title"] = "Master Model";
    Layout = "~/Views/Shared/Material/_Layouts.cshtml";
}

@section Styles{
    <link rel="stylesheet" href="~/sources/vendors/bootgrid/jquery.bootgrid.min.css" />
}

<section id="content">
    <div class="container">
        <div class="c-header">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="card">
            <div class="card-header">
                <h2>List of @ViewData["Title"]</h2>
            </div>
            <div class="card-body card-padding">
                <div class="row">
                    <a asp-action="RegisterModel" asp-controller="HppItem">
                        <button class="btn btn-primary">Add New @ViewData["Title"]</button>
                    </a>
                    <br /><br />
                    <div class="table-responsive">
                        <table id="table-masterdata" class="table table-condensed table-hover table-striped">
                            <thead>
                                <tr>
                                    <th data-column-id="ModelId">Model Id</th>
                                    <th data-column-id="ModelName">Model Name</th>
                                    <th data-column-id="Description">Description</th>
                                    <th data-column-id="ProductName">Product Name</th>
                                    <th data-column-id="VersionNo">Version No</th>
                                    <th data-column-id="commands" data-formatter="commands" data-sortable="false">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.masterModel.ModelId</td>
                                        <td>@item.masterModel.ModelName</td>
                                        <td>@item.masterModel.Description</td>
                                        <td>@item.itemTable.Description</td>
                                        <td>@item.masterModel.VersionNo</td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script type="text/javascript" src="~/sources/vendors/bootgrid/jquery.bootgrid.updated.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#table-masterdata').bootgrid({
                caseSensitive: false,
                formatters: {
                    "commands": function (column, row) {
                        return "<a href=\"EditModels?ModelId=" + row.ModelId + "\"><button type=\"button\" class=\"btn btn-icon command-edit waves-effect waves-circle\"><span class=\"zmdi zmdi-edit\"></span></button></a>" +
                            "<button type=\"button\" class=\"btn btn-icon command-delete waves-effect waves-circle\" onclick=\"PushDelete(\'"+row.ModelId+"\',\'"+row.ModelName+"\')\"><span class=\"zmdi zmdi-delete\"></span></button>"
                    }
                }
            })
        })

        function PushDelete(id, name) {
            Swal.fire({
                title: 'Hapus?',
                text: "Anda Akan Menghapus " + name + "!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Ya!',
                cancelButtonText: 'Kembali'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "DELETE",
                        url: "DeleteModel?id=" + id,
                        success: function (result) {
                            if (result == true) {
                                Swal.fire(
                                    'Terhapus!',
                                    'Record Telah Dihapus',
                                    'success'
                                ).then((result) => {
                                    location.reload()
                                })                                
                            }
                            else {
                                Swal.fire('Terjadi Masalah Saat Menghapus')
                            }
                        }
                    })
                }
            })
        }
        
    </script>
}