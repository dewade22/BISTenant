@model IEnumerable<Manufacturing.Data.Entities.ModelMaster>
@{
    ViewData["Title"] = "Master Model";
    Layout = "~/Views/Shared/Material/_Layouts.cshtml";
}

@section Styles{
    <link rel="stylesheet" href="~/sources/vendors/bootgrid/jquery.bootgrid.min.css" />
}

<section id="content">
    <div class="container">
        <div class="c-header">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="card">
            <div class="card-header">
                <h2>List of @ViewData["Title"]</h2>
            </div>
            <div class="card-body card-padding">
                <div class="row">
                    <button type="button" class="btn btn-primary">Add New @ViewData["Title"]</button>
                    <br /><br />
                    <div class="table-responsive">
                        <table id="table-masterdata" class="table table-condensed table-hover table-striped">
                            <thead>
                                <tr>
                                    <th data-column-id="ModelId" data-type="numeric">Model Id</th>
                                    <th data-column-id="ModelName">Model Name</th>
                                    <th data-column-id="Description">Description</th>
                                    <th data-column-id="ProductID_SKUID">Product Id</th>
                                    <th data-column-id="VersionNo">Version No</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ModelId</td>
                                        <td>@item.ModelName</td>
                                        <td>@item.Description</td>
                                        <td>@item.ProductID_SKUID</td>
                                        <td>@item.VersionNo</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/sources/vendors/bootgrid/jquery.bootgrid.updated.min.js"></script>
    <script>
        $('#table-masterdata').bootgrid({
            caseSensitive: false
        });
    </script>
}