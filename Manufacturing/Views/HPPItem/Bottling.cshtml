
@{
    ViewData["Title"] = "Bottling";
    Layout = "~/Views/Shared/Material/_Layouts.cshtml";
}
@section Styles{
    <link rel="stylesheet" href="~/sources/vendors/bowercomponents/chosen/chosen.min.css" />
}
<section id="content">
    <div class="container">
        <div class="c-header">
            <h2 class="text-capitalize">@ViewData["Title"] - @ViewBag.BomName</h2>
        </div>
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">@ViewData["Title"] Data</h2>
            </div>
            <div class="card-body card-padding">
                <div class="row">
                    <div class="col-sm-4 m-b-25">
                        <input type="text" id="BomId" class="hide" value="@ViewBag.BomId" />
                        <!--TextBox 1-->
                        <div class="form-group fg-float">
                            <div class="fg-line">
                                <input type="number" class="input-sm form-control fg-input" id="QtyMesinFiller">
                                <label class="fg-label">Mesin Filler</label>
                            </div>
                        </div>
                        <!--TextBox 2-->
                        <div class="form-group fg-float">
                            <div class="fg-line">
                                <input type="number" class="input-sm form-control fg-input" id="KapasitasMesin">
                                <label class="fg-label">Kapasitas Mesin Filler</label>
                            </div>
                        </div>
                        <!--Select Box-->
                        <p class="f-500 c-black m-b-15">Labour Type</p>
                        <select id="LabourType" class="chosen" data-placeholder="Choose Labour Type">
                            <option value="">Choose Labour</option>
                            <option value="35000">Production Staff</option>
                            <option value="45000">Supervisor</option>
                            <option value="15625">Daily Worker</option>
                            <option value="50000">Tenaga Ahli</option>
                        </select>
                    </div>
                    <div class="col-sm-4 m-b-25">
                        <!--TextBox 3-->
                        <div class="form-group fg-float">
                            <div class="fg-line">
                                <input type="number" class="input-sm form-control fg-input" id="TotalLabour">
                                <label class="fg-label">Qty Labour</label>
                            </div>
                        </div>
                        <!--TextBox 4-->
                        <div class="form-group fg-float">
                            <div class="fg-line">
                                <input type="number" class="input-sm form-control fg-input" id="TotalTime">
                                <label class="fg-label">Labour Hour</label>
                            </div>
                        </div>
                        <!--TextBox 5-->
                        <div class="form-group fg-float">
                            <div class="fg-line">
                                <input type="number" class="input-sm form-control fg-input" id="PerBatch">
                                <label class="fg-label">Bottle Per Batch</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 m-b-25">
                        <!--TextBox 6-->
                        <div class="form-group fg-float">
                            <div class="fg-line">
                                <input type="number" class="input-sm form-control fg-input" id="FOHGas">
                                <label class="fg-label">FOH Gas</label>
                            </div>
                        </div>
                        <!--TextBox 7-->
                        <div class="form-group fg-float">
                            <div class="fg-line">
                                <input type="number" class="input-sm form-control fg-input" id="FOHFuel">
                                <label class="fg-label">FOH Fuel</label>
                            </div>
                        </div>
                        <!--TextBox 8-->
                        <div class="form-group fg-float">
                            <div class="fg-line">
                                <input type="number" class="input-sm form-control fg-input" id="FOHWater">
                                <label class="fg-label">FOH Water</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">@ViewData["Title"] Electricity</h2>
            </div>
            <div class="card-body card-padding">
                <div class="row">
                    <div class="col-sm-8">
                        <p class="f-500 c-black m-b-15">Transfer</p>
                        <select id="PompaTransfer" class="chosen" data-placeholder="Pilih Pompa Transfer">
                            <option value="">Pilih Pompa</option>
                            <option value="A">Pompa A</option>
                            <option value="B">Pompa B</option>
                            <option value="C">Pompa C</option>
                            <option value="D">Pompa D</option>
                            <option value="E">Pompa Ebara - 0.43KW</option>
                        </select>
                        <br /><br />
                    </div>
                    <div class="col-sm-4">
                        <!--TextBox 9-->
                        <div class="form-group fg-float">
                            <div class="fg-line">
                                <input type="number" class="input-sm form-control fg-input" id="WaktuTransfer">
                                <label class="fg-label">Waktu Transfer (Menit)</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-8">
                        <!--TextBox 9-->
                        <div class="form-group fg-float">
                            <div class="fg-line">
                                <input type="number" class="input-sm form-control fg-input" id="PemakaianListrik" disabled>
                                <label class="fg-label">Pemakaian (KW/h)</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <!--TextBox 10-->
                        <div class="form-group fg-float">
                            <div class="fg-line">
                                <input type="number" class="input-sm form-control fg-input" id="TDL">
                                <label class="fg-label">Tarif Dasar Listrik</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <!--TextBox 11-->
                        <div class="form-group fg-float">
                            <div class="fg-line">
                                <input type="number" class="input-sm form-control fg-input" id="FOHElectricity" disabled>
                                <label class="fg-label">Total Pemakaian Listrik</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Summary Table</h2>
            </div>
            <div class="card-body card-padding">
                <div class="table-responsive">
                    <table id="tableSummary" class="table table-valign-middle table-bordered table-hover display nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th>Item Name</th>
                                <th>Qty</th>
                                <th>Price</th>
                                <th>Type</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                    <br /><br /><br />
                    <div class="form-group fg-float">
                        <div class="fg-line">
                            <input type="number" class="input-sm form-control fg-input" id="TotalPerBatch" disabled>
                            <label class="fg-label">Total Per Batch</label>
                        </div>
                    </div>
                    <br />
                    <div class="form-group fg-float">
                        <div class="fg-line">
                            <input type="number" class="input-sm form-control fg-input" id="TotalPerBottle" disabled>
                            <label class="fg-label">Total Per Botol</label>
                        </div>
                    </div>
                    <br />
                    <br />
                    <button type="button" class="btn btn-primary pull-right" id="btnNext" style="width:200px">Next</button>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script type="text/javascript" src="~/sources/vendors/bowercomponents/chosen/chosen.jquery.min.js"></script>
    <script type="text/javascript" src="~/backend/HPP/BottlingForm.js"></script>
}