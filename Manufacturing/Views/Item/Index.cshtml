@model IEnumerable<Manufacturing.Models.Items.itemTableVM>
@{
    ViewData["Title"] = "Items";
    Layout = "~/Views/Shared/Material/_Layouts.cshtml";
}

@section Styles{
    <link rel="stylesheet" href="~/sources/vendors/bootgrid/jquery.bootgrid.min.css" />
}
<section id="content">
    <div class="container">
        <div class="c-header">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="card">
            <div class="card-header">
                <h2>List of Items</h2>
                <input type="hidden" id="path" value="@Context.Request.Host@Context.Request.Path" />
            </div>
            <div class="table-responsive">
                <table id="table-items" class="table table-condensed table-hover table-striped">
                    <thead>
                        <tr>
                            <th data-column-id="itemNo" data-type="numeric">Item No</th>
                            <th data-column-id="description">Description</th>
                            <th data-column-id="itemCategoryCode">Item Category Code</th>
                            <th data-column-id="productGroupCode">Product Group Code</th>
                            <th data-column-id="baseUnitofMeasure">Base Unit of Measure</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ItemNo</td>
                                <td>@item.Description</td>
                                <td>@item.ItemCategoryCode</td>
                                <td>@item.ProductGroupCode</td>
                                <td>@item.BaseUnitofMeasure</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
@section Scripts{
    <script src="~/sources/vendors/bootgrid/jquery.bootgrid.updated.min.js"></script>
    <script>
        $('#table-items').bootgrid({
            caseSensitive: false
        });
    </script>
}

